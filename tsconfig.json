{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "importsNotUsedAsValues": "error",
    "preserveValueImports": false
  },
  "include": ["src", "tests"]
}
